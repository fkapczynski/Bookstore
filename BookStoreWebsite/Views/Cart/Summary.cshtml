@model BookStore.Domain.Entities.Cart

@{
    Layout = null;
}
<div id="cart">
    <span class="caption">
        <b>Twój koszyk</b>
        @Model.Lines.Sum(x => x.Quantity) sztuk,
        @Model.ComputeTotalPrice().ToString("c")
    </span>
    @Html.ActionLink("Zamów", "Index", "Cart",
    new {returnUrl = Request.Url.PathAndQuery },null)
</div>
